          <!-- Title -->
          <div class="text-center mb-8 mt-6">
            <h1 class="text-2xl font-bold text-gray-900 mb-2">
              Login with your email
            </h1>
            <p class="text-gray-600 text-sm">
              Don't have an Account?
              <a href="#" class="text-blue-500 hover:text-blue-600 font-medium"
                >Create Account</a
              >
            </p>
          </div>

          <!-- Login Form -->
          <form class="space-y-4" id="loginForm">
            <!-- Email Input -->
            <div>
              <input
                type="email"
                id="email"
                placeholder="Email Address"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition text-gray-900 placeholder-gray-400"
                required
              />
            </div>

            <!-- Password Input -->
            <div>
              <input
                type="password"
                id="password"
                placeholder="Password"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition text-gray-900 placeholder-gray-400"
                required
              />
            </div>

            <!-- Forgot Password -->
            <div class="flex justify-end">
              <a
                href="#"
                class="text-sm text-gray-600 hover:text-gray-900 transition"
                >Forgot Password?</a
              >
            </div>

            <!-- Login Button -->
            <button
              type="submit"
              class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 rounded-lg transition shadow-md hover:shadow-lg transform hover:scale-[1.02] active:scale-[0.98]"
            >
              Login
            </button>
          </form>
        </div>
      </div>
